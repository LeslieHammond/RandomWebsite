{# admin/links/index.html.twig #}

{% extends 'admin/links/base.html.twig' %}

{% block body %}
<div class="well">
    {{ form_start(form) }}
    <div class="input-group">
        {#<input class="form-control" type="text" placeholder="URL">#}
        {{ form_widget(form.url) }}
        <div class="input-group-btn">
            {{ form_widget(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>
<!-- row -->
<div class="row">
    <!-- NEW WIDGET START -->
    <article class="col-md-12 sortable-grid ui-sortable">
        {{ include('admin/base/widget.html.twig', {'id': 2, 'title': 'Links list', 'path': 'admin_links_table', 'noPadding': true}) }}
    </article>
    <!-- NEW WIDGET END -->
</div>
<!-- end row -->
{% endblock %}

{% block javascripts %}
<script src="{{ asset( assets_base_urls ~ 'js/plugin/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset( assets_base_urls ~ 'js/plugin/datatables/dataTables.colVis.min.js') }}"></script>
<script src="{{ asset( assets_base_urls ~ 'js/plugin/datatables/dataTables.tableTools.min.js') }}"></script>
<script src="{{ asset( assets_base_urls ~ 'js/plugin/datatables/dataTables.bootstrap.min.js') }}"></script>
<script src="{{ asset( assets_base_urls ~ 'js/plugin/datatable-responsive/datatables.responsive.min.js') }}"></script>
{% endblock %}