{# admin/providers/table.html.twig #}
<table id="dt_providers" class="table table-striped table-bordered table-hover" width="100%">
    <thead>                         
        <tr>
            <th>ID</th>
            <th data-class="expand"><i class="fa fa-fw {{ include('admin/providers/icon.html.twig') }} text-muted hidden-md hidden-sm hidden-xs"></i> Provider</th>
            <td data-class="expand"><i class="fa fa-fw fa-map text-muted hidden-md hidden-sm hidden-xs"></i> Domain</td>
            <th data-class="expand"><i class="fa fa-fw fa-calendar text-muted hidden-md hidden-sm hidden-xs"></i> Creation Date</th>
        </tr>
    </thead>
    <tbody>
        {% for provider in providers %}
        <tr>
            <td>{{ provider.getId() }}</td>
            <td><a href="{{ path('admin_providers_provider', { 'id': provider.getId() }) }}">{{ provider.getName() }}</a></td>
            <td><a href="http://{{ provider.getDomain() }}" target="_blank">{{ provider.getDomain() }}</a></td>
            <td>{{ provider.getCreationDate().format('d-m-Y H:i:s') }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<script type="text/javascript">
        var breakpointDefinition = {
            tablet : 1024,
            phone : 480
        };

        $('#dt_providers').dataTable({
            "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>"+
                "t"+
                "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
            "autoWidth" : true,
            "oLanguage": {
                "sSearch": '<span class="input-group-addon"><i class="fa fa-search"></i></span>'
            },
        });
</script>