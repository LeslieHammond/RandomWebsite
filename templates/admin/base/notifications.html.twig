{# admin/base/notifications.html.twig #}
{% set timeout = 5000 %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        {% if label == 'success' %}
            flashMessage_success("{{ message }}");
        {% elseif label == 'information' %}
            flashMessage_information("{{ message }}");
        {% elseif label == 'danger' %}
            flashMessage_danger("{{ message }}");
        {% endif %}
    {% endfor %}
{% endfor %}