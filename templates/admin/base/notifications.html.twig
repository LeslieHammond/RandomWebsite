{# admin/base/notifications.html.twig #}
{% set timeout = 5000 %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        {% if label == 'success' %}
            $.smallBox({
                title : "Success!",
                content : "{{ message }}",
                color : "#739E73",
                //timeout: {{ timeout }},
                iconSmall : "fa fa-check tada animated",
            });
        {% elseif label == 'info' %}
            $.smallBox({
                title : "Information!",
                content : "{{ message }}",
                color : "#3276B1",
                //timeout: {{ timeout }},
                iconSmall : "fa fa-bell swing animated",
            });
        {% elseif label == 'danger' %}
            $.smallBox({
                title : "Danger!",
                content : "{{ message }}",
                color : "#C46A69",
                //timeout: {{ timeout }},
                iconSmall : "fa fa-warning flip animated",
            });
        {% endif %}
    {% endfor %}
{% endfor %}